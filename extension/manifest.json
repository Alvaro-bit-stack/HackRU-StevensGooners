{
  "manifest_version": 3,
  "name": "Canvas Study AI",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "https://sit.instructure.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://sit.instructure.com/courses/*"],
      "js": ["content.js"]
    }
  ]
}
